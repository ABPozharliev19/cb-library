{
  "compilerOptions": {
    "target": "es5",
    "strictNullChecks": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react",
    "paths": {
      "payload/generated-types": ["./payload-types.ts"]
    },
  },
  "include": ["payload-types.ts", "server.ts", "cms", "environment.d.ts", "env.d.ts"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
